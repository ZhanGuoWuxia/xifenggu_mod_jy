<module name="Backend.Beans">

	<enum name="RoleType" comment="角色类型">
		<var name="Player" alias="玩家" value="0" />
		<var name="Char" alias="普通" value="1" />
		<var name="NPC" alias="特殊" value="2" />
		<var name="Mercenary" alias="雇佣" value="3" />
	</enum>

	<enum name="RoleGenType" comment="角色生成类型">
		<var name="Unique" alias="唯一" value="0" />
		<var name="Template" alias="模板" value="1" />
	</enum>

	<bean name="RoleVoiceData">
		<var name="VoiceId" type="string" comment="音效Id"/>
		<var name="VoiceAssetPath" type="string" comment="资源路径(相对于Audio文件夹)"/>
	</bean>

</module>